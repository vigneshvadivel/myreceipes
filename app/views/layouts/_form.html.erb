<%= render 'shared/errors', obj: @recipe %>

<div class ="row">
  <div class ="well col-md-8 col-md-offset-2">
  
  <%= form_for(@recipe, html: {multipart: true})  do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  
  <%= f.label :summery %>
  <%=  f.text_field :summery %>
  
  <%= f.label :description %>
  <%= f.text_area :description, rows: 10 %>
  
  <span class ="picture">
    <%= f.file_field :picture, accept: 'image/jpeg, image/gif, image/png' %>
  </span>
  
  <%= f.submit(@recipe.new_record? ? 'Create Recipe' : 'edit recipe', class:"btn btn-success") %>
  <% end %>
  </div>
</div>

<script type ="text/java script">
  $('#recipe_picture').bind('change', function(){
    size_in_megabytes = this.files[0].size/1024/1024;
    if (size_in_megabytes > 5) {
      alert ('maximum picture size is 5MB.please choose smaller file');
      }
  });
</script>






